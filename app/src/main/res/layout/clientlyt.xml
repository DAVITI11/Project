<LinearLayout android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFA500"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Home Icon Button -->
        <ImageView
            android:id="@+id/btnHomeTop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_home"
            android:contentDescription="Home" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Online Shop"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <!-- Horizontal categories -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/categoryContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView android:id="@+id/SedanId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sedan"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginEnd="20dp"/>

            <TextView android:id="@+id/SUVId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUV"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginEnd="20dp"/>

            <TextView android:id="@+id/CoupeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coupe"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginEnd="20dp"/>

            <TextView android:id="@+id/PickupId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginEnd="20dp"/>

            <TextView android:id="@+id/SportId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sport"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginEnd="20dp"/>

            <TextView android:id="@+id/VanId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VAN"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"/>

</LinearLayout>
