<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="30dp" android:orientation="vertical" android:layout_marginTop="150dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Phone" android:textSize="25dp"></TextView>

        <Space android:layout_width="25dp" android:layout_height="wrap_content"></Space>

        <EditText android:layout_width="match_parent" android:layout_height="50dp" android:hint="Enter New Phone" android:inputType="phone"></EditText>

    </LinearLayout>

    <Space android:layout_width="wrap_content" android:layout_height="30dp"></Space>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Address" android:textSize="25dp"></TextView>

        <Space android:layout_width="5dp" android:layout_height="wrap_content"></Space>

        <EditText android:layout_width="match_parent" android:layout_height="50dp" android:hint="Enter New Addres" android:inputType="phone"></EditText>

    </LinearLayout>

    <Space android:layout_width="match_parent" android:layout_height="30dp"></Space>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Email" android:textSize="25dp"></TextView>

        <Space android:layout_width="30dp" android:layout_height="wrap_content"></Space>

        <EditText android:layout_width="match_parent" android:layout_height="50dp" android:hint="Enter New Email" android:inputType="phone"></EditText>

    </LinearLayout>

    <Space android:layout_width="match_parent" android:layout_height="30dp"></Space>

    <EditText android:id="@+id/etPassword" android:layout_width="300dp" android:layout_height="50dp" android:hint="Enter Password to Save Change"></EditText>

    <Space android:layout_width="match_parent" android:layout_height="30dp"></Space>

    <Button android:id="@+id/btnSave" android:layout_width="match_parent" android:layout_height="40dp" android:text="Save Change"></Button>

    <Space android:layout_width="match_parent" android:layout_height="10dp"></Space>

    <Button android:id="@+id/GoBackToProfile" android:layout_width="match_parent" android:layout_height="40dp" android:text="Go Back To Home Page"></Button>

</LinearLayout>